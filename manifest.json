{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Auto resume sender",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["djinni.js"],
      "matches": ["https://djinni.co/my/dashboard/"]
    },
    {
      "js": ["djinni-apply.js"],
      "matches": ["https://djinni.co/jobs/*/"]
    },
    {
      "js": ["djinni-apply-succeded.js"],
      "matches": ["https://djinni.co/jobs/*/?applied=ok"]
    }
  ],
  "permissions": ["tabs"]
}
